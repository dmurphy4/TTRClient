<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/colorPrimaryDark">

    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/image_card_1"
               android:layout_margin="5dp"
               android:adjustViewBounds="true"/>

    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/image_card_2"
               android:layout_margin="5dp"
               android:adjustViewBounds="true"
               android:background="@color/colorPrimary"/>

    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:adjustViewBounds="true"
               android:layout_margin="5dp"
               android:id="@+id/image_card_3"/>

    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:adjustViewBounds="true"
               android:layout_margin="5dp"
               android:id="@+id/image_card_4"/>

    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:adjustViewBounds="true"
               android:layout_margin="5dp"
               android:id="@+id/image_card_5"/>

    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:adjustViewBounds="true"
               android:id="@+id/image_deck"
               android:layout_margin="5dp"
               android:src="@drawable/traincarddeck"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/train_deck_count"/>

</LinearLayout>